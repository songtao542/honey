<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.snt.phoney">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Female">

        <!--android:roundIcon="@mipmap/ic_launcher_round"-->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="23a40ad949d9ab5a652d4920642ddb19" />

        <!-- 定位需要的服务 使用2.0的定位需要加上这个 -->
        <service android:name="com.amap.api.location.APSService" />

        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="1107903594" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="com.sina.weibo.sdk.web.WeiboSdkWebActivity"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light"
            android:windowSoftInputMode="adjustResize"
            tools:node="replace"></activity>

        <activity
            android:name=".wxapi.WXEntryActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoDisplay"
            tools:node="replace"></activity>

        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoDisplay"
            tools:node="replace"></activity>

        <activity
            android:name="jiguang.chat.activity.ChatActivity"
            android:theme="@style/AppTheme.Light"></activity>

        <activity android:name="jiguang.chat.activity.BrowserViewPagerActivity"></activity>

        <provider
            android:name=".provider.SettingsProvider"
            android:authorities="com.snt.phoney.settings"
            android:enabled="true"
            android:exported="false"
            android:label="@string/app_name" />

        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->

            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name=".ui.signup.SignupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.setup.SetupWizardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Signup" />


        <activity
            android:name=".ui.dating.DatingActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".ui.vip.VipActivity" />
        <activity android:name=".ui.photo.PhotoViewerActivity" />

        <activity
            android:name=".ui.nearby.NearbyActivity"
            android:theme="@style/AppTheme.Light" />

        <activity android:name=".ui.user.UserActivity"></activity>
        <activity android:name=".ui.report.ReportActivity"></activity>
        <activity android:name=".ui.privacy.PrivacyActivity"></activity>

        <activity
            android:name=".ui.wallet.WalletActivity"
            android:theme="@style/AppTheme.Light"></activity>

        <activity
            android:name=".ui.about.AboutActivity"
            android:theme="@style/AppTheme.Light"></activity>
        <activity
            android:name=".ui.browser.BrowserActivity"
            android:theme="@style/AppTheme.Light"></activity>
        <activity
            android:name=".ui.browser.WebBrowserActivity"
            android:theme="@style/AppTheme.Light"></activity>

        <activity android:name=".ui.album.AlbumSettingActivity"></activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.snt.phoney.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths_public"></meta-data>
        </provider>

    </application>

</manifest>
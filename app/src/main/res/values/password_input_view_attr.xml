<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PasswordInputView">

        <attr name="showPassword" format="boolean" />
        <attr name="autoCloseKeyBoard" format="boolean" />
        <attr name="widthSpace" format="dimension" />
        <attr name="heightSpace" format="dimension" />
        <attr name="boxStrokeWidth" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="circleRadius" format="dimension" />
        <attr name="boxRadius" format="dimension" />
        <attr name="backgroundSolid" format="boolean" />
        <attr name="length" format="integer" />
        <attr name="textColor" format="color" />
        <attr name="boxNormalColor" format="color" />
        <attr name="boxSelectColor" format="color" />
        <attr name="passwordShape" format="enum">
            <enum name="CIRCLE" value="0" />
            <enum name="ASTERISK" value="1" />
        </attr>

    </declare-styleable>

</resources>
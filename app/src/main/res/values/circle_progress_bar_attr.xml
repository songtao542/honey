<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleProgressBar">
        <attr name="progressTextColor" format="color" />
        <attr name="progressTextSize" format="dimension" />
        <attr name="progressWidth" format="dimension" />
        <attr name="maxProgress" format="integer" />
        <attr name="progress" format="float" />
        <attr name="progressBackgroundColor" format="color" />
        <attr name="progressForegroundColor" format="color" />
        <attr name="showPercent" format="boolean" />
        <attr name="countDownMode" format="boolean" />
        <attr name="scalingFactor" format="float" />
        <attr name="starting">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ActionButton">
        <attr name="actionImage" format="reference" />
        <attr name="actionImageScaleType" format="enum">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
        <attr name="actionImageSize" format="dimension" />
        <attr name="actionImageBackground" format="reference" />
        <attr name="actionImageForeground" format="reference" />
        <attr name="actionText" format="reference" />
        <attr name="actionTextColor" format="reference|color" />
        <attr name="actionTextSize" format="dimension" />
    </declare-styleable>
</resources>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppLightTheme" parent="BaseAppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/v21_status_bar_color</item>
    </style>

    <!-- 浅色模式 -->
    <style name="AppTheme.Light" parent="AppLightTheme">
        <item name="mainNavigationTextColor">@color/navigation_text_color_male_selector</item>

        <item name="statusBarBackground">@color/v21_status_bar_color</item>
        <item name="toolbarBackground">@drawable/v21_status_bar_bg</item>
        <item name="toolbarTextColor">@color/black</item>
        <item name="toolbarNavigationIcon">@drawable/ic_back_black</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_round_corner_radius"></corners>
            <stroke android:width="1dp" android:color="@color/gray"></stroke>
            <solid android:color="@color/gray"></solid>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_round_corner_radius"></corners>
            <stroke android:width="1dp" android:color="@color/colorPrimaryPressedMale"></stroke>
            <solid android:color="@color/colorPrimaryPressedMale"></solid>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_round_corner_radius"></corners>
            <stroke android:width="1dp" android:color="@color/colorPrimaryPressedMale"></stroke>
            <solid android:color="@color/colorPrimaryPressedMale"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_round_corner_radius"></corners>
            <stroke android:width="1dp" android:color="@color/colorPrimaryMale"></stroke>
            <solid android:color="@color/colorPrimaryMale"></solid>
        </shape>
    </item>

</selector>
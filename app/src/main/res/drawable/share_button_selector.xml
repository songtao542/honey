<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="oval">
            <corners android:radius="@dimen/share_button_size"></corners>
            <stroke android:width="1dp" android:color="?attr/colorPrimaryPressed"></stroke>
            <solid android:color="?attr/colorPrimaryPressed"></solid>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="@dimen/share_button_size"></corners>
            <stroke android:width="1dp" android:color="?attr/colorPrimaryPressed"></stroke>
            <solid android:color="?attr/colorPrimaryPressed"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <corners android:radius="@dimen/share_button_size"></corners>
            <stroke android:width="1dp" android:color="?attr/colorPrimary"></stroke>
            <solid android:color="?attr/colorPrimary"></solid>
        </shape>
    </item>

</selector>
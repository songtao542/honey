<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_height"></corners>
            <stroke android:width="1dp" android:color="@color/gray"></stroke>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_height"></corners>
            <stroke android:width="1dp" android:color="@color/buttonBorderPressedColor"></stroke>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_height"></corners>
            <stroke android:width="1dp" android:color="@color/buttonBorderPressedColor"></stroke>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_height"></corners>
            <stroke android:width="1dp" android:color="@color/buttonBorderColor"></stroke>
        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/alert_dialog_corner" android:bottomRightRadius="@dimen/alert_dialog_corner" />
            <stroke android:width="1dp" android:color="?attr/colorPrimaryPressed" />
            <solid android:width="1dp" android:color="?attr/colorPrimaryPressed" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/alert_dialog_corner" android:bottomRightRadius="@dimen/alert_dialog_corner" />
            <stroke android:width="1dp" android:color="?attr/colorPrimaryPressed" />
            <solid android:width="1dp" android:color="?attr/colorPrimaryPressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/alert_dialog_corner" android:bottomRightRadius="@dimen/alert_dialog_corner" />
            <stroke android:width="1dp" android:color="?attr/colorPrimary" />
            <solid android:width="1dp" android:color="?attr/colorPrimary" />
        </shape>
    </item>

</selector>
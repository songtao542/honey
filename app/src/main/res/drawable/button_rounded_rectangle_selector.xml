<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_height"></corners>
            <solid android:color="@color/buttonPressedBgColor"></solid>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_height"></corners>
            <solid android:color="@color/buttonPressedBgColor"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_height"></corners>
            <solid android:color="@color/buttonBgColor"></solid>
        </shape>
    </item>

</selector>
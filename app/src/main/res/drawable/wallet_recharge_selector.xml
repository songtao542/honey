<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="?attr/colorPrimaryPressed"></stroke>
            <corners android:radius="@dimen/wallet_withdraw_corner_radius"></corners>
            <solid android:color="@color/recharge_btn_pressed_bg"></solid>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="?attr/colorPrimaryPressed"></stroke>
            <corners android:radius="@dimen/wallet_withdraw_corner_radius"></corners>
            <solid android:color="@color/recharge_btn_pressed_bg"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="?attr/colorPrimary"></stroke>
            <corners android:radius="@dimen/wallet_withdraw_corner_radius"></corners>
            <solid android:color="@color/recharge_btn_bg"></solid>
        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <ripple android:color="?attr/colorControlHighlight" />
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp"></corners>
            <stroke android:width="1dp" android:color="?attr/colorPrimary"></stroke>
            <solid android:color="?attr/colorPrimary"></solid>
        </shape>
    </item>

    <item android:state_pressed="true">
        <ripple android:color="?attr/colorControlHighlight" />
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp"></corners>
            <stroke android:width="1dp" android:color="@android:color/transparent"></stroke>
            <solid android:color="@android:color/transparent"></solid>
        </shape>
    </item>

</selector>
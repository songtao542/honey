<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <gradient
                android:angle="135"
                android:endColor="?attr/gradientEndColor"
                android:startColor="?attr/gradientStartColor"></gradient>

            <corners android:radius="@dimen/auth_gradient_corner_radius" />

        </shape>
    </item>
    <item>
        <ripple
            android:color="?attr/colorControlHighlight"
            android:radius="@dimen/auth_gradient_corner_radius"></ripple>
    </item>
</layer-list>



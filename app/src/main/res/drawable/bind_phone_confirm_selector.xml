<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_border_corner_radius"></corners>
            <stroke android:width="1dp" android:color="@color/bind_phone_confirm_pressed"></stroke>
            <solid android:color="@color/bind_phone_confirm_pressed"></solid>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_border_corner_radius"></corners>
            <stroke android:width="1dp" android:color="@color/bind_phone_confirm_pressed"></stroke>
            <solid android:color="@color/bind_phone_confirm_pressed"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_border_corner_radius"></corners>
            <stroke android:width="1dp" android:color="@color/bind_phone_confirm"></stroke>
            <solid android:color="@color/bind_phone_confirm"></solid>

        </shape>
    </item>

</selector>
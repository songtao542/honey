<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="SigninFragmentBinding">

        <variable
            name="viewModel"
            type="com.snt.phoney.ui.signin.SigninViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/sign_content_padding_start"
        android:paddingEnd="@dimen/sign_content_padding_end">


        <ImageView
            android:id="@+id/head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_launcher" />


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_rounded_rectangle_border"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@{viewModel.user != null? viewModel.user.username : null}" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/verificationCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/edittext_rounded_rectangle_border"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="@{viewModel.user != null? viewModel.user.password : null}" />


            <TextView
                android:id="@+id/getVerificationCode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_get_verification_code_height"
                android:layout_gravity="center|right"
                android:layout_marginRight="20dp"
                android:background="@drawable/get_verification_code_selector"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/get_verification_code"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <Button
            android:id="@+id/login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_rounded_corner_selector"
            android:elevation="0dp"
            android:text="@string/btn_login"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/btn_forget_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/qq"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher_round" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/weixin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher_round" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/weibo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher_round" />
        </LinearLayout>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/publishTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_dropdown"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/publish_time"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_normal" />

            <!--<Spinner-->
            <!--android:id="@+id/spinner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_dropdown"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/sort_by_distance"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/datingContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_dropdown"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/dating_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>

    </LinearLayout>

    <com.snt.phoney.widget.ExpandableFilterView
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.snt.phoney.ui.square.official.OfficialRecommendFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/recommend_list_bg"
        tools:context="com.snt.phoney.ui.square.official.OfficialRecommendFragment"
        tools:listitem="@layout/fragment_official_recommend" />
</LinearLayout>
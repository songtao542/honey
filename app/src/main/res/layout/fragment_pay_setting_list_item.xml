<?xml version="1.0" encoding="utf-8"?>
<com.snt.phoney.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="centerCrop" />


    <com.snt.phoney.widget.CompatRadioButton
        android:id="@+id/checkbox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:paddingRight="6dp"
        app:icon="@drawable/ic_radio_circle_button" />

</com.snt.phoney.widget.SquareLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/tagContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/newest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/friend_tag_selector"
                android:paddingLeft="@dimen/friend_tag_content_padding"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/friend_tag_content_padding"
                android:paddingBottom="5dp"
                android:text="@string/friend_tag_newer"
                android:textColor="@color/friend_filter_selector"
                android:textSize="@dimen/textsize_small" />

            <TextView
                android:id="@+id/popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/friend_tag_selector"
                android:paddingLeft="@dimen/friend_tag_content_padding"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/friend_tag_content_padding"
                android:paddingBottom="5dp"
                android:text="@string/friend_tag_popular"
                android:textColor="@color/friend_filter_selector"
                android:textSize="@dimen/textsize_small" />

            <TextView
                android:id="@+id/nearest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/friend_tag_selector"
                android:paddingLeft="@dimen/friend_tag_content_padding"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/friend_tag_content_padding"
                android:paddingBottom="5dp"
                android:text="@string/friend_tag_nearest"
                android:textColor="@color/friend_filter_selector"
                android:textSize="@dimen/textsize_small" />

            <TextView
                android:id="@+id/hottest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/friend_tag_selector"
                android:paddingLeft="@dimen/friend_tag_content_padding"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/friend_tag_content_padding"
                android:paddingBottom="5dp"
                android:text="@string/friend_tag_hottest"
                android:textColor="@color/friend_filter_selector"
                android:textSize="@dimen/textsize_small" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/moreTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/friend_tag_more_selector"
        android:paddingLeft="@dimen/friend_tag_content_padding"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/friend_tag_content_padding"
        android:paddingBottom="5dp"
        android:text="@string/friend_tag_more_filter"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_small" />

</LinearLayout>

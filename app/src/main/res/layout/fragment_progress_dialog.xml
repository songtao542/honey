<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="@dimen/progress_dialog_size"
        android:layout_height="@dimen/progress_dialog_size"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <com.snt.phoney.widget.ProgressBar
            android:layout_width="@dimen/progress_dialog_bar_size"
            android:layout_height="@dimen/progress_dialog_bar_size"
            android:layout_centerInParent="true"
            app:progressColor="?attr/colorPrimary" />

    </RelativeLayout>
</RelativeLayout>

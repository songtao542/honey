<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.square.SquareFragment">


    <com.snt.phoney.widget.Toolbar
        android:id="@+id/squareToolbar"
        style="@style/AppTheme.ToolbarWithTab"
        android:tag="square"
        app:navigationIcon="@null">

        <com.snt.phoney.widget.TabLayout
            android:id="@+id/squareTab"
            style="@style/AppTheme.Tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="30dp" />
    </com.snt.phoney.widget.Toolbar>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/squarePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true" />

</LinearLayout>
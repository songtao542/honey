<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/head" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/head"
            android:text="西风吴琴"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_large" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/head"
            android:background="@drawable/recommend_age_bg"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="2dp"
            android:text="30岁"
            android:textSize="@dimen/textsize_smaller" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reliableValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/name"
            android:background="@drawable/recommend_age_bg"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="靠谱值4500"
            android:textSize="@dimen/textsize_smaller" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/publishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/age"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="1小时前发布"
            android:textSize="@dimen/textsize_smaller" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/datingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/recommend_dating_bg"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="乐队地点"
            android:textSize="@dimen/textsize_smaller" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/datingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/datingAddress"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/datingAddress"
            android:background="@drawable/recommend_dating_bg"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="乐队时间"
            android:textSize="@dimen/textsize_smaller" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAa"
        android:textSize="@dimen/textsize_normal" />

    <com.snt.phoney.widget.FlowLayout
        android:id="@+id/flowImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:column="3"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:space="5dp"
        app:square="true">

    </com.snt.phoney.widget.FlowLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/add_attention"
            android:textSize="@dimen/textsize_normal" />

        <Button
            android:id="@+id/attend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/join_dating"
            android:textSize="@dimen/textsize_normal" />

    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="4dp"-->
    <!--android:background="@color/recommend_divider_bg" />-->

</LinearLayout>

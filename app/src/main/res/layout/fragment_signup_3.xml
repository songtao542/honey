<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/step3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.setup.SetupWizardThreeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppTheme.Toolbar"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/input_base_info"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/step_2_2"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/cityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/underline_gray"
        android:clickable="true"
        android:minHeight="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_get_verification_code_height"
            android:layout_gravity="center|left"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/label_select_city"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edittext_height"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:paddingLeft="36sp"
            android:paddingRight="20dp"
            android:text="@string/select_city"
            android:textSize="@dimen/textsize_normal" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|right"
            app:srcCompat="@drawable/ic_right_arrow" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/purposeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_gray"
        android:clickable="true"
        android:minHeight="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_get_verification_code_height"
            android:layout_gravity="center|left"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/label_select_purpose"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/purpose"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edittext_height"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:paddingLeft="36sp"
            android:paddingRight="20dp"
            android:text="@string/select_purpose"
            android:textSize="@dimen/textsize_normal" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|right"
            app:srcCompat="@drawable/ic_right_arrow" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/jobButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_gray"
        android:clickable="true"
        android:minHeight="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_get_verification_code_height"
            android:layout_gravity="center|left"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/label_select_job"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edittext_height"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:paddingLeft="36sp"
            android:paddingRight="20dp"
            android:text="@string/select_job"
            android:textSize="@dimen/textsize_normal" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|right"
            app:srcCompat="@drawable/ic_right_arrow" />


    </FrameLayout>


    <Button
        android:id="@+id/confirmStep3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_primary_circle_corner_selector"
        android:elevation="0dp"
        android:text="@string/start_life"
        android:textColor="@android:color/white" />

</LinearLayout>